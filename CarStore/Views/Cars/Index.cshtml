@model IEnumerable<CarStore.Models.Car>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Магазин автомобилей</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        h2 {
            text-align: center;
            margin-bottom: 40px;
            color: #343a40;
            font-weight: 700;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-title {
            font-weight: 600;
        }

        .price {
            font-size: 1.2rem;
            font-weight: 700;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Магазин автомобилей</h2>
        <div class="row g-4">
            @foreach (var car in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card p-3">
                        <div class="card-body text-center">
                            <h5 class="card-title">@car.Brand @car.Model</h5>
                            <p class="mb-1">Год: @car.Year</p>
                            <p class="price">@String.Format("{0:C}", car.Price)</p>
                            <a href="#" class="btn btn-primary mt-2">Купить</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
